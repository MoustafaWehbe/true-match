{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "noImplicitAny": false,
    "rootDir": "./",
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "~/*": ["./*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "@dapp/shared/src/types/openApiGen/**/*.ts",
    "../shared/src/types/openApiGen/**/*.ts"
  ],
  "references": [{ "path": "../shared" }]
}
