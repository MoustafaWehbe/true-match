{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "noImplicitReturns": false,
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "@dapp/shared/src/types/openApiGen/**/*.ts",
    "..shared/src/types/openApiGen/**/*.ts"
  ],
  "references": [{ "path": "../shared" }]
}
